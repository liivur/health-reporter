                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger 
                     Binding ="{Binding ElementName=testsDataGrid, Path=SelectedIndex}" Value="-1">
