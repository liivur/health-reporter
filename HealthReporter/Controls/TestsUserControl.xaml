                            </Style>
                        </Button.Resources>
                        <Button.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="New test" Click="btn_AddNewTest"/>
                                <MenuItem Header="New category" Click="btn_AddNewCategory"/>
                                <MenuItem Header="New age group" Click="btn_AddNewAge"/>
                                <MenuItem Header="Delete last age group" Click="btn_DeleteRating" HorizontalAlignment="Right"/>
